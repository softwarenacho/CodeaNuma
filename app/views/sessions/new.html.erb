	<div class="col-md-4 col-md-offset-4">
	    <%= form_for(:session, url: sessions_path) do |f| %>

			<%= f.label :email %>
			<%= f.text_field :email, { :class => "form-control" } %>

			<%= f.label :password, :for => "session_password" %>
