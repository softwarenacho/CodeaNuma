<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<% if current_user.admin? %>
		<h2 class="title">Todos los Administradores<span class="line"></span></h2>

		<table class="table table-striped tablesorter">
			<thead>
				<tr>
					<th>Usuario</th>
					<th>Email</th>
					<% if current_user.admin? %>
					<th>Eliminar</th>
					<% end %>
				</tr>
			</thead>
			<tbody>
				<% @admins.each do |user| %>
				<tr>
					<td><%= link_to user.name, user %></td>
					<td><%= user.email %></td>
					<% if current_user.admin? %>
					<td>
						<%= link_to "Borrar", user, method: :delete,
						data: { confirm: "¿Estás seguro de borrar a #{user.name}?" } %>
					</td>
					<% end %>

				</tr>

				<% end %>
			</tbody>
		</table>
		<% end %>


		<br><br><br><br>
		<!-- ======================================================================== -->
		<h2 class="title">Todos los Usuarios</h2>

		<table class="table table-striped tablesorter">
			<thead>
				<tr>
					<th>Usuario</th>
					<th>Email</th>
					<% if current_user.admin? %>
					<th>Eliminar</th>
					<% end %>
				</tr>
			</thead>
			<tbody>
				<% @users.each do |user| %>
				<tr>
					<td><%= link_to user.name, user %></td>
					<td><%= user.email %></td>
					<% if current_user.admin? %>
					<td>
						<%= link_to "Borrar", user, method: :delete,
						data: { confirm: "¿Estás seguro de borrar a #{user.name}?" } %>
					</td>
					<% end %>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
